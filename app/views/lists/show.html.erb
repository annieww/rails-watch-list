<div class="container">

  <div class="page-head">
    <%= cl_image_tag @list.photo.key, height: 200, width: 300, crop: :fill %>
    <h1>
    <i class="fa-solid fa-film"></i>
    Movies in
    <em><%= @list.name %></em>
    </h1>
  </div>
  <div class="cards-show">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-show">
          <%= image_tag(bookmark.movie.poster_url) %>
          <div class="card-content">
            <h3><%= bookmark.movie.title %></h3>
            <p><%= truncate(bookmark.movie.overview, :length => 160) %></p>

            <p>
              <i class="fa-solid fa-star"></i>
              <%= bookmark.movie.rating %>
            </p>

            <p>
              <i class="fa-solid fa-quote-left"></i>
              <em><%= bookmark.comment %></em>
              <i class="fa-solid fa-quote-right"></i>
            </p>
          </div>
          <%# <%= link_to 'Delete bookmark', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-secondary" %>
          <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>

      </div>

    <% end %>
  </div>

  <div class="page-footer mt-2">
    <%= link_to edit_list_path(@list) do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>

    <%= link_to new_list_bookmark_path(@list) do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>

    <%= link_to list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>

    <%= link_to lists_path do %>
      <i class="fa-solid fa-home"></i>
    <% end %>

    <%# <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
    <%# <%= link_to "Delete this list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning" %>
    <%# <%= link_to 'All movie lists', lists_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
    </div>
    <div class="footer-copyright">
      <i class="fas fa-heart"></i>
    </div>
</div>
