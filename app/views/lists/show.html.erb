<div class="container">
  <h1>List of movies in <%= @list.name %></h1>

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card">
        <h3><%= bookmark.movie.title %></h3>
        <p><%= bookmark.movie.overview %></p>
        <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-remove-link" %>
    </div>
    <% end %>

  <p><%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %></p>
  <p><%= link_to 'All movie lists', lists_path %></p>

</div>
