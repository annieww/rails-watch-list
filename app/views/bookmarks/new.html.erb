<div class="container">
  <h1>Add new bookmark</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.order(:title) %>
    <%= f.input :comment, placeholder: "leave your comment" %>
    <%= f.button :submit, class: "btn btn-success" %>
  <% end %>
  <p><%= link_to 'Cancel', list_path(@list) %></p>
  <p><%= link_to 'Home', lists_path %></p>

</div>
